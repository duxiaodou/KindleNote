<%= form_for(current_user, method: "patch" ) do |form| %>
<div class="form-group row">
  <div class="col-12 text-center">
    <img src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : image_url('logo.png') %>" style="width: 100px; height: 100px;">
      <%= form.file_field :avatar %><br>
  </div>
  
  <label for="inputEmail" class="col-form-label">Email</label>
  <div class="col-12">
    <input type="email" name="user[email]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="<%= t('register.email_hint') %>" value="<%= current_user.email %>">
  </div>

  <label for="inputEmail4" class="col-form-label">Password</label>
  <div class="col-12">
    <input type="password" name="user[password]" class="form-control" id="exampleInputPassword1" placeholder="<%= t('register.password_hint') %>">
  </div>
</div>
<%= form.submit :class => "btn btn-info pull-right" %><br>
<% end %>