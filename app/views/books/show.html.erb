<div class="row">
  <%= render partial: "book", locals: {book: @book } %>
  <div class="col-8" style="margin-top: 30px;">
    <blockquote class="blockquote">
      <p class="mb-0 text-truncate" ><%= @book.describe %></p>
      <footer class="blockquote-footer"><%= @book.author %></footer>
    </blockquote>
    <div class="row col-12">
      <% @book.rating.to_i.times do %>
        <%= fa_icon 'star', :style => 'color: #0086FF;' %>
      <% end %>
      <% (5-@book.rating.to_i).times do %>
        <%= fa_icon 'star'%>
      <% end %>
    </div>

    <div class="row" style="margin-top: 30px;">
      <div class="list-group col-12">
        <% @book.notes.each do |note| %>
          <div style="margin-top: 20px;">
            <a href="<%= note_path note %>" class="list-group-item list-group-item-action flex-column align-items-start active">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= note.title %></h5>
                <small><%= note.created_at %></small>
              </div>
              <p class="mb-1"><%= note.describe ? note.describe : t('note.no_describe') %></p>
              <small><%= note.user.email %></small>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>