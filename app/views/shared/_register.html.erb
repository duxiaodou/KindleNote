<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card text-center">
      <div class="card-header">
        <a href="<%= root_path %>">
          <img src="<%= image_url('logo.png') %>" class="img-fluid" alt="Responsive image" style="width: 60px; height: 60px;">
        </a>
      </div>

      <div class="card-body">
        <div class="card-text">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-2 col-form-label"><%= fa_icon "envelope", class:'fa-2x' %></label>
              <div class="col-sm-10">
                <input type="email" name="user[email]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="<%= t('register.email_hint') %>">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-2 col-form-label"><%= fa_icon "key", class:'fa-2x' %></label>
              <div class="col-sm-10">
                <input type="password" name="user[password]" class="form-control" id="exampleInputPassword1" placeholder="<%= t('register.password_hint') %>">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-2 col-form-label"><%= fa_icon "clone", class:'fa-2x' %></label>
              <div class="col-sm-10">
                <input type="password" name="user[password_confirmation]" class="form-control" id="exampleInputPassword1" placeholder="<%= t('register.repetition_password_hint') %>">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-2 col-form-label"><%= fa_icon "hashtag", class:'fa-2x' %></label>
              <div class="col-sm-4">
                <%= rucaptcha_input_tag(class: 'form-control', placeholder: t('login.captcha_hint')) %>
              </div>
              <div class="col-sm-6">
                <%= rucaptcha_image_tag(alt: 'Captcha') %>
              </div>
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">
                <%= t('register.accept_license') %>
                <a href="<%= license_path  %>"><%= t('register.license') %></a>   
              </label>
            </div>
            <button type="submit" class="btn btn-primary bg-dark"><%= t('header.register') %></button>
            <div class="form-group text-center">
              <a href="<%= session_path(resource_name) %>"><%= t('register.already_registered?') %></a>
            </div>
          <% end %>
        </div>
      </div>
  
      <div class="card-footer text-muted">
        <%= render "shared/third_party_login" %>
        <small id="emailHelp" class="form-text text-muted"><%= t('register.privacy_protection_hint') %></small>
      </div>
    </div>
  </div>
</div>