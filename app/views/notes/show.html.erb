<div class="row">
  <div class="col-12">
    <%= render partial:"shared/breadcrumb", locals: {breadcrumb_items: [
        {
          :url => notes_path, :title => t('nav.note')
        },
        {
          :url => note_path(@note), :title => @note.title
        }
      ]} %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h1 class="display-4"><%= @note.title %></h1>
    <p class="lead"><% @note.describe %></p>
  </div>

  <div class="col-12">
    <div class="btn-toolbar pull-right" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
          <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#note_share"><%= fa_icon "share-alt" %> Share</button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="First group">
          <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#note_share"><%= fa_icon "trash" %> Delete</button>
        </div>
    </div>
  </div>
  <div class="col-12">
    <div class="col-12">
       <div class="collapse" id="note_share">
            <div class="row pull-right">
              <%= render partial:"notes/share", locals: {note: @note, platforms: ['evernote', 'youdao', 'qq', 'weibo']} %>
            </div>
        </div>
    </div>
  </div>
       

  <div class="list-group col-12" style="margin-top: 10px;">
    <%= render partial: "fragment", collection: @note.fragments %>
  </div>
</div>